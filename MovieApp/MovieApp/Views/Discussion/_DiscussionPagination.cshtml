@using Common.ViewModels;
@model PagerViewModel

<div class="container">
    <ul class="pagination justify-content-end">
        @if (Model != null && Model.TotalPages > 1)
        {
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a href="javascript:void(0);" class="page-link" onclick="DiscussionPagination(@Model.CurrentPage - 1)">Previous</a>
                </li>
            }
            for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item @(i==Model.CurrentPage ? "active":"")">
                    <a href="javascript:void(0);" class="page-link" onclick="DiscussionPagination(@i)">@i</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a href="javascript:void(0);" class="page-link" onclick="DiscussionPagination(@Model.CurrentPage + 1)">Next</a>
                </li>
            }
        }
    </ul>
</div>

