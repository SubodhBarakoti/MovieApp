@using Common.ViewModels;
@model DiscussionsViewModel
<div class="col-md-12">
    @if(Model.Discussions != null)
    {
        @foreach (var discussion in @Model.Discussions)
        {
            <div class="comment-field d-flex justify-content-between align-items-center">
                <div>
                    <input type="hidden" id="DiscussionId" value="@discussion.Id">
                    <strong class="text-danger">@discussion.UserName</strong><sub>@discussion.Created</sub>
                    <p>@discussion.DiscussionText</p>
                </div>
                @if (User.Identity.Name == discussion.UserName)
                {
                    <div>
                        <button class="btn btn-danger" style="border-radius:20px;" onclick="DeleteDiscussion()">Delete</button>
                    </div>
                }
            </div>
        }
    }
</div>
<partial name="../Discussion/_DiscussionPagination" model="@Model.pager" />
